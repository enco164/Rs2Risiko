<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/ButtonTextColor">

    <TextView
        android:text="Prebaci 1 armija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_desc" android:textColor="@color/blue" android:textSize="24dp"/>

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:id="@+id/seekBar" android:scrollbarStyle="outsideInset" />

    <Button android:id="@+id/button_seek_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="OK" />
</LinearLayout>